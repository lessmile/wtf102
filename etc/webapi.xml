<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/product/sku/:productId" method="GET">
        <service class="Mgodev\Webhook\Api\ProductInterface" method="getSkuById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="productId" force="true">%productId%</parameter>
        </data>
    </route>
</config>
